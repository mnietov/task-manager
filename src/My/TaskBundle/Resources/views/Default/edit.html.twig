{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h2>{% trans %}Edit Task{% endtrans %}</h2>   
        
        {{form_start(form)}}
        {{form_errors(form)}}
        {{form_row(form.name, { 'attr': {'class': 'form-control'} })}} <br/>
        {{form_row(form.description, { 'attr': {'class': 'form-control'} })}} <br/>
        {{form_row(form.save, { 'attr': {'class': 'btn btn-primary'} })}}
        {{form_end(form)}}
        
    </div>
    
    <br/>
    <footer>
        <div class="container">
            {% trans %}Contact{% endtrans %}: {{ contact_email }}
        </div>
    </footer>

{% endblock %}

